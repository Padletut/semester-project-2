{
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@playwright/test": "^1.51.1",
    "@types/node": "^22.13.14",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "husky": "^8.0.0",
    "jsdoc": "^4.0.4",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "sass": "^1.86.0",
    "vite": "^6.2.4",
    "vitest": "^3.1.1"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,css,md}": "prettier --write",
    "*.html": "prettier --write"
  },
  "scripts": {
    "dev": "vite && npm-run-all --parallel watch start",
    "build": "vite build && sass src/scss:dist/css --style=compressed && postcss dist/css/*.css --use autoprefixer -d dist/css/ && cp -R node_modules/bootstrap-icons/font/fonts dist/css/fonts",
    "lint-staged": "npx lint-staged",
    "serve": "vite preview",
    "prepare": "husky install",
    "test": "vitest",
    "watch": "sass src/scss:dist/css --watch",
    "start": "live-server"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "postcss-cli": "^11.0.1"
  }
}
